  <script>
    /**
     * Handle signup form submission
     */
    async function handleSignup(event) {
      event.preventDefault();
      
      const submitBtn = document.getElementById('submitBtn');
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const password = document.getElementById('password').value;
      const terms = document.getElementById('terms').checked;
      
      // Validation
      if (!name || name.length < 2) {
        toast.error('Por favor, introduce tu nombre');
        return;
      }
      
      if (!utils.isValidEmail(email)) {
        toast.error('Por favor, introduce un email v√°lido');
        return;
      }
      
      if (password.length < 8) {
        toast.error('La contrase√±a debe tener al menos 8 caracteres');
        return;
      }
      
      if (!terms) {
        toast.error('Debes aceptar los t√©rminos y condiciones');
        return;
      }
      
      // Disable button and show loading
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<span class="spinner"></span> Creando cuenta...';
      
      try {
        // Call signup API
        await auth.signup(email, password, name);
        
        // Success
        toast.success('¬°Cuenta creada! Bienvenido üéâ');
        
        // Redirect to dashboard
        setTimeout(() => {
          window.location.href = '/app/dashboard.html';
        }, 1000);
        
      } catch (error) {
        console.error('Signup error:', error);
        
        let errorMessage = 'Error al crear cuenta. Por favor, intenta de nuevo.';
        
        if (error.message.includes('already exists') || error.message.includes('409')) {
          errorMessage = 'Este email ya est√° registrado. ¬øQuieres iniciar sesi√≥n?';
        } else if (error.message.includes('invalid')) {
          errorMessage = 'Datos inv√°lidos. Por favor, verifica la informaci√≥n.';
        } else if (error.message.includes('Network')) {
          errorMessage = 'Error de conexi√≥n. Por favor, verifica tu internet.';
        } else if (error.message) {
          errorMessage = error.message;
        }
        
        toast.error(errorMessage);
        
        // Re-enable button
        submitBtn.disabled = false;
        submitBtn.innerHTML = 'Crear Cuenta Gratis';
      }
    }
    
    // Auto-focus name field
    document.getElementById('name').focus();
  </script>
